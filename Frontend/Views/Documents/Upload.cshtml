@model UploadViewModel
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Upload Document</h1>
    @Html.ValidationSummary()
    <form asp-action="Upload" asp-controller="Documents" method="post" enctype="multipart/form-data">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Name" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "File Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.File" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input asp-for="File" type="file" class="form-control">
                    @Html.ValidationMessageFor(m => m.File)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Upload</button>
                </div>
            </div>
        </div>
    </form>
</div>  